- provide(:title, "Explore")

.row
  .col-md-4.col-md-offset-4
    .page-header
      %h1.center
        Explore
        .small
          %span.glyphicon.glyphicon-glass
          See what's happening around town.

.row
  -(@display_count / 3).times do |i|
    =render "activities/explore_activity",
      name:  @act_arr[i].name,
      desc:  @act_arr[i].description,
      price: @act_arr[i].price
    =render "activities/explore_activity",
      name:  @act_arr[i+1].name,
      desc:  @act_arr[i+1].description,
      price: @act_arr[i+1].price
    =render "activities/explore_activity",
      name:  @act_arr[i+2].name,
      desc:  @act_arr[i+2].description,
      price: @act_arr[i+2].price
    .clearfix.visible-md




