- provide(:title, 'Sign in')
.col-sm-6.col-md-4.col-sm-offset-3.col-md-offset-4
  .col-sm-12.well.form-box.sign-in-box
    .row
      %h1
        .text-center Vendor sign in
        .small.text-center

    .row.top-buffer.sign-in-input
      = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        .form-signin
          = f.email_field :email, hide_label: true, placeholder: "Email", :autofocus => true, class: 'form-control'
          = f.password_field :password, hide_label: true, placeholder: "Password", class: 'form-control'
          - if devise_mapping.rememberable?
            = f.check_box :remember_me
            = f.label :remember_me
          %div= f.submit "Sign in", class: "btn btn-lg btn-success btn-block"
  .col-sm-12
    = render "devise/shared/links"
    = link_to "Looking for the regular (non-vendor) sign in?", new_customer_session_path
