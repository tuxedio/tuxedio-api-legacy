- provide(:title, "Add activity time")

.col-sm-6.col-sm-offset-3.well.form-box
  .col-sm-12
    .row
      %h1
        .text-center Add activity time.
        .small.text-center
          %span.glyphicon.glyphicon-time
          When will this activity take place?

    .row.top-buffer
      = bootstrap_form_for @activity_time, url: activities_activity_times_path do |f|
        = render 'shared/error_messages', object: f.object
        = f.datetime_select :start_time
        = f.datetime_select :end_time
        = hidden_field_tag :activity_id, params['activity_id']
        = f.submit "Add time", class: "btn btn-large btn-primary"
