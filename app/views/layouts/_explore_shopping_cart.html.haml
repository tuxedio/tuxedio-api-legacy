=form_tag change_adventures_journey_items_path do
  #cart.list-group{"data-offset-top" => "145", "data-spy" => "affix"}
    .list-group-item.active
      %h4.center
        %span.glyphicon.glyphicon-shopping-cart
        Adventure items
        %br
      .center=journey[0].adventure.name unless journey.empty?
    -if journey.empty?
      .list-group-item
        %h5.list-group-item-header
          Your adventure is empty!
        %p.list-group-item-header-text
          Don't be shy, add something.
    -else
      -journey.each do |item|
        .list-group-item.item
          %h5.list-group-item-header
            = item.experience.name
          %p.list-group-item-header-text
            - time = item.experience_time.start_time
            .small= time.to_formatted_s(:long)

          = check_box_tag 'delete[]', item.id
          = label_tag 'delete', 'Delete'
      .top-buffer
        = submit_tag 'Update adventure', class: 'btn btn-sm btn-block btn-success'

