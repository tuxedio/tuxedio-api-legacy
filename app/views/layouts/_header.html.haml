%header.navbar.navbar-fixed-top.navbar-default
  .navbar-inner
    .container
      = link_to "Tuxedo", root_path, id: "logo"
      %nav
        %ul.nav.pull-right
          %li= link_to "Explore", "#"
          %li= link_to "Local's Pick", "#"
          %li= link_to "Blog", "#"
          - if customer_signed_in?
            / %li= link_to "Users", '#'
            %li#fat-menu.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                My Profile
                %b.caret
              %ul.dropdown-menu
                %li= link_to "View Profile", profile_path
                %li= link_to "Account Settings", edit_customer_registration_path
                %li.divider
                %li
                  = link_to "Sign out", destroy_customer_session_path, method: "delete"
          - elsif vendor_signed_in?
            %li= link_to "Businesses", '#'
            %li#fat-menu.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                My Account
                %b.caret
              %ul.dropdown-menu
                %li= link_to "View My Account", '#'
                %li= link_to "Account Settings", edit_vendor_registration_path
                %li.divider
                %li
                  = link_to "Sign out", destroy_vendor_session_path, method: "delete"
          - else
            - unless controller.controller_name == "sessions"
              %li#fat-menu.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                  Sign in
                  %b.caret
                %ul.dropdown-login.dropdown-menu
                  = bootstrap_form_for(:customer, url:  customer_session_path, layout: :inline) do |f|
                    %li= f.email_field :email, :autofocus => true
                    %li= f.password_field :password
                    %li= f.submit "Sign in", class: "btn btn-success"
