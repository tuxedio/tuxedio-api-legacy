.navbar.navbar-fixed-top.navbar-default
  .container
    %button.navbar-toggle{"data-target" => "#tuxedo-navbar-collapse", "data-toggle" => "collapse", type: "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to "Tuxedo", root_path, class: "navbar-brand"

    #tuxedo-navbar-collapse.collapse.navbar-collapse
      .nav.navbar-nav.navbar-right
        %li{ class: ( (current_page? explore_path) and 'active') }= link_to "Explore", explore_path
        %li= link_to "Local's Pick", "#"
        %li= link_to "Blog", "#"
        %li{ class: ( (current_page? customers_trips_path) and 'active') }= link_to "My Trips", customers_trips_path
        - if customer_signed_in?
          / %li= link_to "Users", '#'
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              My Profile
              %b.caret
            %ul.dropdown-menu.dropdown-menu-right
              %li= link_to "View Profile", customer_profile_path
              %li= link_to "Account Settings", edit_customer_registration_path
              %li.divider
              %li
                =link_to "Sign out", destroy_customer_session_path, method: "delete"
        - elsif vendor_signed_in?
          / %li= link_to "Businesses", '#'
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              My Account
              %b.caret
            %ul.dropdown-menu
              %li= link_to "View My Account", vendor_profile_path
              %li= link_to "Account Settings", edit_vendor_registration_path
              %li.divider
              %li
                = link_to "Sign out", destroy_vendor_session_path, method: "delete"
        - else
          - unless controller.controller_name == "sessions" or controller.controller_name == "registrations"
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                Sign in
                %span.glyphicon.glyphicon-log-in
              %ul.dropdown-login.dropdown-menu
                %li.navbar-form
                  = bootstrap_form_for(:customer, url:  customer_session_path) do |f|
                    = f.email_field :email, hide_label: true, placeholder: "Email", :autofocus => true, id: "navbar-input"
                    = f.password_field :password, hide_label: true, placeholder: "Password", id: "navbar-input"
                    = f.submit "Sign in", class: "btn btn-block btn-success", id: "navbar-input"
                %li.divider
                %li= link_to "New user? Sign up!", registration_choice_path
                %li= link_to "Vendor? Click here.", new_vendor_session_path

