.navbar.navbar-fixed-top.navbar-default
  .container
    %button.navbar-toggle{"data-target" => "#tuxedio-navbar-collapse", "data-toggle" => "collapse", type: "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to "tuxedio", root_path, class: "navbar-brand", id: "logo"

    #tuxedio-navbar-collapse.collapse.navbar-collapse.navbar-responsive-collapse
      .nav.navbar-nav.navbar-right
        %li{ class: ( (current_page? explore_path) and 'active') }= link_to "Explore", explore_path
        /%li= link_to "Local's Pick", "#"
        /%li= link_to "Blog", "#"
        - if user_signed_in? and current_user.person?
          %li{ class: ( (current_page? people_adventures_path) and 'active') }= link_to "My Adventures", people_adventures_path
          / %li= link_to "Users", '#'
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: person_profile_path}
              My Profile
              %b.caret
            %ul.dropdown-menu.dropdown-menu-right
              %li= link_to "View Profile", person_profile_path
              %li= link_to "Account Settings", edit_user_registration_path
              %li.divider
              %li
                =link_to "Sign out", destroy_user_session_path, method: "delete"
        - elsif user_signed_in? and current_user.vendor?
          / %li= link_to "Businesses", '#'
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: vendor_profile_path}
              My Account
              %b.caret
            %ul.dropdown-menu
              %li= link_to "View My Account", vendor_profile_path
              %li= link_to "Account Settings", edit_user_registration_path
              %li.divider
              %li
                = link_to "Sign out", destroy_user_session_path, method: "delete"
        - else
          - unless controller.controller_name == "sessions" or controller.controller_name == "user_registrations"
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: new_user_session_path}
                Sign in
                %span.glyphicon.glyphicon-log-in
              %ul.dropdown-login.dropdown-menu
                = render 'layouts/sign_in_dropdown'

