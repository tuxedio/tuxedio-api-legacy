- provide(:title, current_user.rolable.name)
.row
  .col-md-4
    %section.center
      .person-picture
        =image_tag current_user.rolable.picture.url(:medium)
      .person-profile-links
        = link_to "View my upcoming adventures", people_adventures_path, {:class => "btn btn-default btn-md btn-success"}
        =link_to "Edit profile", edit_people_path, class: "btn btn-default btn-md btn-primary"
  .col-md-8
    %section
      .person-name.well
        %h1= current_user.rolable.name
        .small
          %span.glyphicon.glyphicon-user
          Personal Profile
      .person-info.well
        .person-location
          - unless current_user.rolable.location.nil?
            = "Based in #{current_user.rolable.location}"
        .person-email
          %span= "Email: "
          = current_user.email
        .person-bio
          %span My bio:
          %p.well= current_user.rolable.bio
