- provide(:title, "Add an activity")

.col-sm-6.col-sm-offset-3.well.form-box
  .col-sm-12
    .row
      %h1
        .text-center= @activity.name
        .small.text-center
          %span.glyphicon.glyphicon-globe
          Book this activity?

    .row.top-buffer
      = bootstrap_form_for(@itinerary_item, :url => {:controller => :itinerary_items, :action => :create}) do |f|
        = render 'shared/error_messages', object: f.object
        = f.collection_select :trip_id, @trips.load, :id, :trip_name, label: "Which trip would you like to add to?"
        = f.collection_select :start_time, @activity_times.load, label: "Start time"
        = hidden_field_tag :activity_id, @activity.id
        .center= f.submit "Add to my trip", class: "btn btn-large btn-primary"
